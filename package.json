{
  "name": "vscode-stac-json-schema",
  "displayName": "vscode-stac-json-schema",
  "description": "Automatically validate SpatioTemporal Asset Catalog (STAC) JSON files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "stac",
    "json-schema",
    "validation",
    "geospatial"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "STAC JSON Schema Validator",
      "properties": {
        "stacJsonSchema.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic STAC JSON schema validation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}